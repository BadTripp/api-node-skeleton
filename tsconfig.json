{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "node_modules/*" : ["node_modules/*" ],
      "src/repositories/*": ["src/repositories/*"],
      "src/models/*": ["src/models/*"],
      "src/utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}